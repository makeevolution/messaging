{
  "Messaging": {
    "HostName": "rabbitmq",
    "ExchangeName": "orders",
    "DeadLetterExchangeName": "orders-dlq"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://ankiai.seq:5341",
          "_comment": "consider moving these serilog setup to docker-compose"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "Consumer.Api"
    }
  }
}
